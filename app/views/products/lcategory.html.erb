<div id="content">
  <div class="container">
    <div>
      <%= render_breadcrumbs separator: ' > ' %>
    </div>
    <form class="form-horizontal col-sm-10" role="form" action="/search" method="get">
      <div class="form-group">
        <div class=" col-sm-10 vcenter">
          <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカーを入力してください" value="<%= params[:search] %>">
        </div>
        <div class="col-sm-2 vcenter">
          <button type="submit" class="btn btn-default btn-warning">検索</button>
        </div>
      </div>
    </form>
    <div class="clearfix"></div><hr>

    <div class="col-sm-2 left-menu">
      <h1 class="left"><font size="3%"><%= "#{LCategory.find_by(id: @category).l_category }一覧" %></font></h1>
      <% LCategory.find_by_id(@category).m_categories.each do |mc| %>
        <div class="clearfix">
          <h3><%=link_to mc.m_category, mcategory_path(:mcat => mc.id) %></h3>
          <% mc.s_categories.each do |sc| %>
            <ul>
              <li><%=link_to sc.s_category, scategory_path(:scat => sc.id) %></li>
            </ul> 
          <% end %>
        </div>
      <% end %>
    </div>
    <%= render 'product_list' %>

  </div>
</div>
