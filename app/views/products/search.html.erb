<div id="content">
  <div class="container">
    <h1 class="center">検索結果</h1><br>

    <form class="form-horizontal" role="form" action="/search" method="get">
      <div class="form-group">
        <div class="col-sm-8">
          <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカー名を入力してください" value="<%= params[:search] %>">
        </div>
        <div class="col-sm-offset-2 col-sm-2">
          <button type="submit" class="btn btn-default">検索</button>
        </div>
      </div>
    </form>


    <% if @products.present? %>
      <%= will_paginate %>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-sm-3">
            <div class="panel panel-default">
              <div class="panel-body">
                <%= link_to product  do %>
                  <%= image_tag product.img_url, {:style => 'border: none;', :class => 'img-rounded'} %>
                <% end %>
              </div>
              <div class="panel-footer">
                <ul>
                  <li><%= product.model_number %></li>               
                  <li><%= product.price %></li>
                  <li><%= product.title %></li>
                </ul>
              </div>
            </div>
          </div>
        <% end %> 
      </div>
      <%= will_paginate %>
    <% end %> 


  </div>
</div>
<%= link_to 'New Product', new_product_path %>
