<div id="content">
  <div class="container">
    <%= render_breadcrumbs separator: ' > ' %>
  <form class="form-horizontal col-sm-10" role="form" action="/search" method="get">
    <div class="form-group">
      <div class=" col-sm-10 vcenter">
        <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカーを入力してください" value="<%= params[:search] %>">
      </div>
      <div class="col-sm-2 vcenter">
        <button type="submit" class="btn btn-default btn-warning">検索</button>
      </div>
    </div>
  </form>
  <div class="clearfix"></div><hr>

    <div class="col-sm-2 left-menu">
      <h1 class="left"><font size="3%"><%= "#{params[:search]}一覧" %></font></h1>
      <% LCategory.all.each do |lc| %>
        <div class="clearfix">
          <h3><%=link_to lc.l_category, lcategory_path(:lcat => lc.id) %></h3>
          <ul>
            <% lc.m_categories.each do |mc| %>
              <li><%=link_to mc.m_category, mcategory_path(:mcat => mc.id) %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
      </div>
    <%= render 'product_list' %>

  </div>
</div>
