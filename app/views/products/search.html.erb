<div id="content">
  <div class="container">
    <%= render_breadcrumbs separator: ' > ' %>
    <h1 class="center">検索結果 - UsedX</h1><br>

    <form class="form-horizontal" role="form" action="/search" method="get">
      <div class="form-group">
        <div class="col-sm-8">
          <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカー名を入力してください" value="<%= params[:search] %>">
        </div>
        <div class="col-sm-offset-2 col-sm-2">
          <button type="submit" class="btn btn-default">検索</button>
        </div>
      </div>
    </form>

    <div class="col-sm-2 left-menu">
      <% LCategory.all.each do |lc| %>
        <div class="clearfix">
          <h3><%=link_to lc.l_category, lcategory_path(:lcat => lc.id) %></h3>
          <ul>
            <% lc.m_categories.each do |mc| %>
              <li><%=link_to mc.m_category, mcategory_path(:mcat => mc.id) %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
      </div>
    <%= render 'product_list' %>

  </div>
</div>
