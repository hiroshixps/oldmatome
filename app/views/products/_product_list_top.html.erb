
<% if @products.present? %>
  <span class="apple_pagination" >
    <%= will_paginate  :class => 'center' %>
  </span>
  <div class="col-sm-12">
    <% @products.each do |product| %>
      <div class="col-sm-3 img-rounded">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= link_to product,data: { no_turbolink: true }  do %>
              <%= image_tag product.img_url, {:style => 'border: none;', :class => 'img-rounded'} %>
            <% end %>
          </div>
          <div class="panel-footer">
            <ul>
              <li><%= product.model %></li>               
              <li class="panel-price"><%= number_to_currency(product.new_price, :unit => "ï¿¥", :precision => 0) %></li>
              <li><%= product.product_name %></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
  <span class="apple_pagination" >
    <%= will_paginate  :class => 'center' %>
  </span>
<% end %> 

