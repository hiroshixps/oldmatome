<div id="content">
  <div class="container">
    <%= render_breadcrumbs separator: ' > ' %>
    <h1 class="center"><%= SCategory.find_by(id: @category).s_category  %>の一覧</h1><br>
    <form class="form-horizontal" role="form" action="/search" method="get">
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-8">
          <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカーを入力してください" value="<%= params[:search] %>">
        </div>
        <div class="col-sm-2">
          <button type="submit" class="btn btn-default">検索</button>
        </div>
      </div>
    </form>

    <h3><%= SCategory.find_by(id: @category).s_category  %></h3>

    <% if @products.present? %>
      <%= will_paginate %>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-sm-3">
            <div class="panel panel-default">
              <div class="panel-body">
                <%= link_to product  do %>
                  <%= image_tag product.img_url, {:style => 'border: none;', :class => 'img-rounded'} %>
                <% end %>
              </div>
              <div class="panel-footer">
                <ul>
                  <li><%= product.model %></li>               
                  <li><%= product.new_price %></li>
                  <li><%= product.product_name %></li>
                </ul>
              </div>
            </div>
          </div>
        <% end %> 
      </div>
      <%= will_paginate %>
    <% end %> 


  </div>
</div>
