<div id="content">
  <div class="container">
    <div>
      <%= render_breadcrumbs separator: ' > ' %>
    </div>
    <form class="form-horizontal col-sm-10" role="form" action="/search" method="get">
      <div class="form-group">
        <div class=" col-sm-10 vcenter">
          <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカーを入力してください" value="<%= params[:search] %>">
        </div>
        <div class="col-sm-2 vcenter">
          <button type="submit" class="btn btn-default btn-warning">検索</button>
        </div>
      </div>
    </form>
    <div class="clearfix"></div><hr>
    <h1 class="left"><font size="3%"><%= "#{SCategory.find_by(id: @category).s_category }一覧" %></font></h1>
    <%= render 'product_list_top' %>
  </div>
</div>
