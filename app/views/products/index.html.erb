<div class="left hero-unit">
  <h1>中古PC・家電の最安価格を検索！</h1><br>
  <form class="form-horizontal" role="form" action="/search" method="get">
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-8">
        <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカーを入力してください" value="<%= params[:search] %>">
      </div>
      <div class="col-sm-2">
        <button type="submit" class="btn btn-default">検索</button>
      </div>
    </div>
  </form>

  <h2>カテゴリ</h2>
  <section>
  <% LCategory.all.each do |lc| %>
    <div class="col-sm-3">
      <h3><%=link_to lc.l_category, lcategory_path(:lcat => lc.id) %></h3>
      <% MCategory.find_all_by_l_id(lc.id).each do |mc| %>
        <li><%=link_to mc.m_category, mcategory_path(:mcat => mc.id) %></li>
      <% end %>
    </div>
  <% end %>
  </section><br>


  <%= will_paginate %>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>型番</th>
        <th>ブランド</th>
        <th>価格</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr class="table table-bordered">
          <td><%= link_to product.product_name, product %></td>
          <td><%= product.model %></td>
          <td><%= product.img_url %></td>
          <td><%= number_to_currency(product.new_price, :unit => "￥", :precision => 0) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate %>
  <br>
</div>
<%= link_to 'New Product', new_product_path %>
