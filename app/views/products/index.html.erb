<div class="center hero-unit">
  <h1>UsedX</h1><br>
        <ul>
      <% LCategory.all.each do |lc| %>
        <li><%=link_to lc.l_category, controller: "products", action: "search", search: lc.l_category %></li>
      <% end %>
        </ul>

  <form class="form-horizontal" role="form" action="/search" method="get">
    <div class="form-group">
      <div class="col-sm-10">
        <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカーを入力してください" value="<%= params[:search] %>">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">検索</button>
      </div>
    </div>
  </form>

      <%= will_paginate %>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>型番</th>
        <th>ブランド</th>
        <th>価格</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr class="table table-bordered">
          <td><%= link_to product.product_name, product %></td>
          <td><%= product.model %></td>
          <td><%= product.img_url %></td>
          <td><%= product.new_price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

      <%= will_paginate %>
  <br>
</div>
<%= link_to 'New Product', new_product_path %>
