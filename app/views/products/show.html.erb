<div id="content">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <form class="form-horizontal" role="form" action="/search" method="get">
      <div class="form-group">
        <div class="col-sm-8">
          <input type="search" name="search" class="form-control" placeholder="商品名、型番、メーカー名を入力してください" value="<%= params[:search] %>">
        </div>
        <div class="col-sm-offset-2 col-sm-2">
          <button type="submit" class="btn btn-default">検索</button>
        </div>
      </div>
    </form>

    <h1 class="center"><%= @product.title %></h1>
    <div class="row">
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= link_to @product.detail_url  do %>
              <%= image_tag @product.img_url, {:style => 'border: none;', :class => 'img-rounded'} %>
            <% end %>
          </div>
          <div class="panel-footer">
            <ul>
              <li><%= @product.model_number %></li>               
              <li><%= @product.price %></li>
              <li><%= @product.title %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <p>
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div>
</div>
