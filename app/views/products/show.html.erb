<div id="content">
  <div class="container">
    <%= render_breadcrumbs separator: ' > ' %>
    <p id="notice"><%= notice %></p>

    <div class="row">
      <div class="col-sm-3">
        <div class="panel panel-default">
          <div class="panel-body">
              <%= image_tag @product.img_url, {:style => 'border: none;', :class => 'img-rounded'} %>
          </div>
        </div>
      </div>
      <div class="col-sm-9 product">
        <h1 class="left"><%= @product.product_name %></h1><hr>
        <div class="col-sm-4 product">
          <ul>
            <li>メーカー：<%= @product.brand %></li>               
            <% if @product.series %>
              <li>シリーズ名：<%= @product.series %> </li>
            <% end %>
            <li class="product_price">新品最安値：<%= number_to_currency(@product.new_price, :unit => "￥", :precision => 0) %></li>
            <li><a href= <%=@product.kakaku_url%>  class ="btn btn-success" target ="_blank" >価格.comで見る <span class="glyphicon glyphicon-hand-right"></span></a></li>
          </ul>
        </div>
        <div class="col-sm-8">
          <table class="table table-striped pricebox">
            <% get_amazonpc %>
            <% get_yahoopc %>
            <% get_rakutenpc %>
            <tbody>
          <tr>
            <th colspan="4" class="left">中古最安価格一覧</th>
          </tr>
              <tr>
                <td>Amazon</td>
                <td id = "amazonpc"><%= @amazon_price ? number_to_currency(@amazon_price, :unit => "￥", :precision => 0) :  "商品がありません"%></td>
                <td><%=@amazon_detail ? (link_to "商品詳細を見る",  @amazon_detail,:target=>["_blank"], :class => "btn btn-warning") : "---" %> </td>
                <td><a href= "http://www.amazon.co.jp/s/field-keywords=<%=@product.product_name%>/"  target ="_blank" ><span class="glyphicon glyphicon-th-list"></span><%= @amazon_price ?  " 商品一覧をみる": " 類似商品を確認する"%></a></td>
              </tr>
              <tr>
                <td>楽天中古市場</td>
                <td id = "amazonpc"><%= @rakuten_price ? number_to_currency(@rakuten_price, :unit => "￥", :precision => 0) :  "商品がありません"%></td>
                <td><%=@rakuten_detail ? (link_to "商品詳細を見る ",  @rakuten_detail,:target=>["_blank"], :class => "btn btn-warning") : "---" %> </td>
                <td><a href= "http://search.rakuten.co.jp/search/mall/<%=@product.product_name%>/"  target ="_blank" ><span class="glyphicon glyphicon-th-list"></span><%= @rakuten_price ?  " 商品一覧をみる": " 類似商品を確認する"%></a></td>
              </tr>
              <tr>
                <td>ヤフオク</td>
                <td id = "amazonpc"><%= @yahoo_price ? number_to_currency(@yahoo_price, :unit => "￥", :precision => 0) :  "商品がありません"%></td>
                <td><%=@yahoo_detail ? (link_to "商品詳細を見る ",  @yahoo_detail,:target=>["_blank"], :class => "btn btn-warning") : "---" %> </td>
                <td><a href= "http://auctions.search.yahoo.co.jp/search?p=<%=@product.product_name%>"  target ="_blank"><span class="glyphicon glyphicon-th-list"></span><%= @yahoo_price ?  " 商品一覧をみる": " 類似商品を確認する"%></a></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <table class="table-bordered table-striped col-sm-10 spec">
        <tbody>
          <tr>
            <th colspan="4" class="center">商品仕様</th>
          </tr>
          <% @product.spec.each_slice(2) do |s| %>
            <tr>
              <th><%= s[0].to_a.first %></td>
              <td><%= s[0].to_a.second %></td>
              <th><%= s[1].to_a.first %></td>
              <td><%= s[1].to_a.second %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>
